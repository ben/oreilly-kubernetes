<li>
    <span class="controls">
        <a href="#" {{action 'delete'}}>❌</a>
        {{#if isComplete}}
            <a href="#" {{action 'uncomplete'}}>🔧</a>
        {{else}}
            <a href="#" {{action 'complete'}}>✅</a>
        {{/if}}
    </span>
    <span class={{model.state}}>{{model.title}}</span>
</li>
